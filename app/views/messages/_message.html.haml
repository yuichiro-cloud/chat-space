.main-chat__message-list__message.div{data: {message: {id: message.id}}}
  .main-chat__message-list__message__upper-message
    .main-chat__message-list__message__upper-message__user-name
      = message.user.name
    .main-chat__message-list__message__upper-message__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__message__lower-message
    - if message.content.present?
      %p.main-chat__message-list__message__lower-message__content
        = message.content
      = image_tag message.image.url, class: "main-chat__message-list__message__lower-message__image" if message.image.present?